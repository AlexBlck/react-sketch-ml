{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "arrowFunctions": true,
      "es6": true,
      "commonjs": true
    }
  },
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "babel",
    "import",
    "prettier",
    "jest"
  ],
  "rules": {
    "no-console": 1,
    "no-unused-vars": [
      1,
      {
        "vars": "local",
        "args": "none"
      }
    ],
    "class-methods-use-this": 0,
    "no-underscore-dangle": 0,
    "newline-per-chained-call": 0,
    "no-empty-function": "error",
    "prettier/prettier": "warn",
    "camelcase": [
      "warn",
      {
        "ignoreDestructuring": true
      }
    ]
  }
}